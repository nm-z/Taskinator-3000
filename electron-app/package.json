{
  "name": "taskinator-electron-app",
  "version": "1.0.0",
  "main": "main.cjs",
  "private": true,
  "scripts": {
    "start": "NODE_ENV=development electron .",
    "start:prod": "NODE_ENV=production electron .",
    "build:react": "cd ../frontend && npm run build",
    "pack": "npm run build:react && electron-builder --dir",
    "dist": "npm run build:react && electron-builder"
  },
  "devDependencies": {
    "electron": "^36.3.1",
    "electron-builder": "^24.6.3"
  },
  "build": {
    "appId": "com.taskinator3000.app",
    "productName": "Taskinator-3000",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "main.cjs",
      "preload.cjs",
      "../frontend/dist/**/*"
    ],
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "dependencies": {
    "@fortawesome/free-brands-svg-icons": "^6.7.2",
    "@fortawesome/free-regular-svg-icons": "^6.7.2",
    "@fortawesome/free-solid-svg-icons": "^6.7.2",
    "@fortawesome/react-fontawesome": "^0.2.2",
    "@mui/icons-material": "^7.1.0",
    "@tabler/icons-react": "^3.33.0",
    "feather-icons-react": "^0.9.0",
    "lucide-react": "^0.511.0",
    "react-icons": "^5.5.0"
  }
}
